<div class="mb-3 text-end">
  <%= link_to 'Add New Product', new_admin_product_path, class: 'btn btn-sm btn-success' %>
</div>
<div class="card">
  <div class="card-header bg-primary text-white text-center">
    <h5 class="m-0 fw-bold">Products List</h5>
  </div>
  <div class="card-body">
    <table class="table table-bordered shadow-sm table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Image</th>
          <th>Price</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td>
              <% if product.image.attached? %>
                <%= image_tag product.image, size: "100x100" %>
              <% end %>
            </td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
            <td>
              <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-sm btn-warning" %>
              <%= link_to "Delete", admin_product_path(product), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
