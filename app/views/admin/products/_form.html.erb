<%= form_with model: product, url: product.persisted? ? admin_product_path(product) : admin_products_path, method: product.persisted? ? :patch : :post, local: true, data: { turbo: false } do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        <%= f.label :name, "Name", class: "form-label" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :price, class: "form-control", placeholder: "Price" %>
        <%= f.label :price, "Price", class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
        <%= f.label :description, "Description", class: "form-label" %>
      </div>
    </div>

    <div class="col-md-6">
      <label class="form-label fw-bold">Image</label>
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      <%= f.submit product.persisted? ? 'Update Product' : 'Create Product', class: "btn btn-primary w-100" %>
    </div>
  </div>

<% end %>