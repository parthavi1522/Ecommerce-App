<div class="card">
  <div class="card-header bg-primary text-white text-center">
    <h5 class="m-0 fw-bold">Orders List</h5>
  </div>
  <div class="card-body">
    <table class="table table-bordered shadow-sm table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>User Name</th>
          <th>User Mobile Number</th>
          <th>Shipment Address</th>
          <th>Products</th>
          <th>Products Images</th>
          <th>Order Status</th>
          <th>Payment Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.user.full_name %></td>
            <td><%= order.user.mobile_number %></td>
            <td><%= order.shipping_address %></td>
            <td></td>
            <td></td>
            <td><%= order.order_status&.capitalize %></td>
            <td><%= order.payment_status&.capitalize %></td>
            <td>
              <%= link_to "Edit", edit_admin_order_path(order), class: "btn btn-sm btn-warning" %>
              <%= link_to "Delete", admin_order_path(order), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
