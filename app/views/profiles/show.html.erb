<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow rounded-4">
      <div class="card-body text-center">

        <% if @user.profile.attached? %>
          <%= image_tag @user.profile.variant(resize_to_fill: [150, 150]), class: "rounded-circle mb-3", alt: "Profile Picture" %>
        <% else %>
          <%= image_tag 'default-avatar.png', alt: "No Profile", class: "rounded-circle mb-3", width: 150, height: 150 %>
        <% end %>

        <h4 class="fw-bold mb-0"><%= @user.full_name || @user.username %></h4>
        <p class="text-muted">@<%= @user.username %></p>

        <ul class="list-group list-group-flush text-start mt-4">
          <li class="list-group-item"><strong>Email:</strong> <%= @user.email %></li>
          <li class="list-group-item"><strong>Mobile:</strong> <%= @user.mobile_number %></li>
          <li class="list-group-item"><strong>Address:</strong> <%= @user.address %></li>
        </ul>

        <%= link_to 'Edit Profile', edit_profile_path(@user), class: "btn btn-outline-primary mt-4 rounded-pill px-4 fw-semibold" %>
      </div>
    </div>
  </div>
</div>
