<div class="card shadow-sm p-4 border-danger">
  <h2 class="text-center text-danger mb-4 fw-bold">Cancel Order</h2>

  <div class="text-center mb-4">
    <p class="fs-5">You're about to cancel the following order:</p>
    
    <h5 class="mt-4 mb-3 fw-bold text-center">Order Summary</h5>
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |item| %>
          <tr>
            <td><%= item.product.name %></td>
            <td>₹ <%= item.product.price %></td>
            <td><%= item.quantity %></td>
            <td>₹ <%= item.product.price * item.quantity %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3" class="text-end">Total:</th>
          <th>₹ <%= @order.total_price %></th>
        </tr>
      </tfoot>
    </table>
  </div>

  <p class="text-center text-muted">This action cannot be undone. A refund will be processed if eligible.</p>

  <div class="d-flex justify-content-center gap-3 mt-4">
    <%= link_to 'Yes, Cancel Order', order_cancel_path(@order), class: 'btn btn-danger px-4 py-2 rounded-3 fw-semibold' %>
    <%= link_to 'No, Go Back', orders_path, class: 'btn btn-outline-secondary px-4 py-2 rounded-3 fw-semibold' %>
  </div>
</div>