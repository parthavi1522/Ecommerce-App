<div class="row justify-content-center mt-2">
  <div class="col-md-8">
    <div class="card shadow rounded-4">
      <div class="card-header bg-primary text-white text-center fw-bold">
        We value your feedback
      </div>

      <div class="card-body">
        <% if @feedback.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
            <ul>
              <% @feedback.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @feedback, local: true, html: { multipart: true }, data: { turbo: false } do |f| %>
          <div class="row">
            <div class="col-12">
              <div class="form-floating">
                <%= f.text_area :content, class: "form-control h-100", placeholder: "Content", rows: 5 %>
                <%= f.label :content, "Content", class: "form-label" %>
              </div>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-12 text-center">
              <%= f.submit 'Submit', class: "btn btn-primary w-100" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
