<div class="row justify-content-center align-items-center">
  <div class="col-md-6 col-lg-5">
    <div class="login-box">
      <h2 class="text-center">Register</h2>
      <p class="text-center">Please enter your details to create account !</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, data: { turbo: false } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <% [:first_name, :last_name, :username, :address, :mobile_number].each do |field| %>
          <div class="form-group mb-3">
            <%= f.text_field field, placeholder: field.to_s.titleize, class: "form-control text-center" %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.password_field :password, class: "form-control text-center", placeholder: "Password" %>
        </div>

        <div class="mb-3">
          <%= f.password_field :password_confirmation, class: "form-control text-center", placeholder: "Password Confirmation" %>
        </div>

        <div class="mb-3">
          <%= f.file_field :profile, class: "form-control text-center" %>
        </div>

        <%= f.submit "Register", class: "btn btn-login" %>
      <% end %>

      <hr class="bg-white">
      <p class="text-center">Already have an account?
        <%= link_to "Login", new_user_session_path, class: "text-info" %>
      </p>
    </div>
  </div>
</div>
