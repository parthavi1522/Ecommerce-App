<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-5">
    <div class="login-box">
      <h2>LOGIN</h2>
      <p>Please enter your username and password!</p>

      <%= form_for(:user, url: user_session_path, html: { method: :post }) do |f| %>
        <div class="mb-3">
          <%= f.text_field :username, class: "form-control text-center", placeholder: "UserName" %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, class: "form-control text-center", placeholder: "Password" %>
        </div>

        <%= f.submit "Login", class: "btn btn-login", data: { turbo: false } %>
      <% end %>
    </div>
  </div>
</div>