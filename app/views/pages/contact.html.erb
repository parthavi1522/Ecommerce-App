<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-lg border-0 rounded-3">
      <div class="card-header bg-primary text-white text-center py-3">
        <h4 class="mb-0 fw-bold">Contact Us</h4>
      </div>
      <div class="card-body p-4">
        <% if @contact.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
            <ul>
              <% @contact.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model: @contact, url: contact_path, local: true, data: { turbo: false } do |f| %>
          
          <div class="mb-3 form-floating">
            <%= f.text_field :name, class: "form-control rounded-3", placeholder: "Your Name" %>
            <%= f.label :name, "Your Name", class: "form-label" %>
          </div>

          <div class="mb-3 form-floating">
            <%= f.email_field :email, class: "form-control rounded-3", placeholder: "Your Email" %>
            <%= f.label :email, "Your Email", class: "form-label" %>
          </div>

          <div class="mb-3 form-floating">
            <%= f.text_area :message, class: "form-control rounded-3", placeholder: "Your Message", style: "height: 120px;" %>
            <%= f.label :message, "Your Message", class: "form-label" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Send Message", class: "btn btn-primary btn-lg rounded-pill shadow-sm" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
